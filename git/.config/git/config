; vim: tabstop=8 noexpandtab shiftwidth=8 softtabstop=8
[user]
	email = qstrahl@gmail.com
	name = Quinn Strahl
[push]
	default = current
[branch]
	autosetuprebase = always
[github]
	user = qstrahl
[rebase]
	autoStash = true
[pretty]
	oneline-fixed = format:%C(auto)%h %C(auto)%s%C(auto)%d
[pull]
	rebase = true
[fetch]
	prune = true
[core]
	excludesfile = ~/.gitignore
[difftool]
	prompt = false
[diff]
	algorithm = histogram
	colorMoved = zebra
	tool = icdiff
	wordRegex = "\\w+|[[:punct:]]"
[diff "jsx"]
	wordRegex = "</?\\w+|\\w+|[[:punct:]]"
[difftool "colordiff"]
	cmd = colordiff -y "$LOCAL" "$REMOTE"
[difftool "cwdiff"]
	cmd = cwdiff "$LOCAL" "$REMOTE"
[difftool "diff"]
	cmd = diff -y -w -W "$(tput cols)" --color=always --label "$LOCAL" "$LOCAL" "$REMOTE"
[difftool "dwdiff"]
	cmd = dwdiff -A best -c -C 3 -m 10 -P "$LOCAL" "$REMOTE"
[difftool "icdiff"]
	cmd = icdiff -L "$REMOTE" -L "$REMOTE" --no-bold "$LOCAL" "$REMOTE"
[difftool "sdiff"]
	cmd = sdiff -w $(tput cols) -BWd "$LOCAL" "$REMOTE"
[difftool  "vim"]
	cmd = vim -d "$LOCAL" "$REMOTE"
[difftool "ydiff"]
	cmd = git diff "$LOCAL" "$REMOTE" | ydiff -w 0 -s
[pager]
	difftool = true
[log]
	abbrevCommit = true
	follow = true
[alias]
	; amend the last commit
	amend = commit --amend
	cma = commit --amend
	squash = commit --amend

	; ammend the last commit without modifying the commit message
	fixup = commit --amend --no-edit
	fix = commit --amend --no-edit

	; hard reset to FETCH_HEAD; fuck everything I did
	fucked = reset --hard FETCH_HEAD

	; push, force with lease
	please = push --force-with-lease
	pls = push --force-with-lease

	; rebase sub-op shortcuts
	rbc = rebase --continue
	rbs = rebase --skip
	rba = rebase --abort

	; shorthands for various ops, with my favourite flags enabled (like --color-words) where applicable:
	br = branch
	cm = commit
	co = checkout
	dif = diff --color-words
	dt = difftool
	lg = log --color-words
	lg1 = log --color-words --pretty=oneline-fixed
	lgr = log --color-words --reverse
	lgr1 = log --color-words --reverse --pretty=oneline-fixed
	ls = ls-files
	rb = rebase
	sho = show --color-words
	st = status
	up = remote update
	dtr = diff-tree --no-commit-id --name-only -r
[include]
        path = .gitconfig.local
